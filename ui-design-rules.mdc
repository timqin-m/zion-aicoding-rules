  inset: -100px;
  background: radial-gradient(
    circle at 50% 50%, 
    rgba(0, 122, 255, 0.08), 
    transparent 70%
  );
  filter: blur(60px);
  opacity: 0.6;
  z-index: -1;
  pointer-events: none;
